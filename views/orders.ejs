<%- include('../partials/head.ejs') %> <%- include('../partials/nav.ejs') %>
<body>
    <div class="orders mt-5">
        <div class="container">
            <div class=" text-center text-md-start pb-4">
                <h2 class="fw-bold fs-3">
                    Orders
                </h2>
            </div>
            <% if (orders.length > 0) { %> 
            <% orders.forEach((order, index) => {%> 
                <div class="pb-5 order-info">
                    <div class=" mb-4 d-flex justify-content-between" >
                        <div>
                            <h5>Order Number (<%= index + 1 %>) </h5>
                            <span class="d-block fw-bold">Order ID : <%= order._id %> </span>
                            <span class="d-block fw-bold">name : <%= order.name %> </span>
                            <span class="d-block fw-bold">Address : <%= order.address %> </span>
                        </div>
                        <div>
                            <div class="dropdown">
                                <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Export
                                </button>
                                <ul class="dropdown-menu">
                                  <li><a class="dropdown-item" href="#">PDF</a></li>
                                  <li><a class="dropdown-item" href="#">Excel</a></li>
                                </ul>
                              </div>
                        </div>
                    </div>
                    <table class="table text-center table-striped table-hover mb-3">
                            <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">ProductName</th>
                                <th scope="col">Brand</th>
                                <th scope="col">Color</th>
                                <th scope="col">ProductQuantity</th>
                                <th scope="col">Price</th>
                            </tr>
                            </thead>
                            <tbody>
                                <% order.products.forEach((product, index) => { %> 
                                    <tr>
                                        <th scope="row"> <%= index + 1 %>  </th>
                                        <td><%= product.productId.title %> </td>
                                        <td><%= product.productId.description.brand %> </td>
                                        <td><%= product.productId.description.color %> </td>
                                        <td><%= product.quantity  %> </td>
                                        <td><%= product.totalPrice  %> </td>
                                    </tr>
                                <%  }) %>
                                <tr class="total">
                                    <td class="fw-bold" colspan="4">Total</td>
                                    <td class="fw-bold"><%= order.totalQuantity %> </td>
                                    <td class="fw-bold"><%= order.totalPrice %> </td>
                                </tr> 
                            </tbody>
                    </table>
                </div>
             <%   })  %> 
            <% } else { %> 
                    <span class="fw-bold">You don't have any Orders</span>
                <% } %> 
        </div>
    </div>
</body>
</html>