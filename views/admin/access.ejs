<%- include('../../partials/admin/head.ejs') %> 
<style>
    body {
        background-color: #22272e;
        /* #22272e */
    }
    .text {
        width: 350px;
        padding: 20px;
        border-radius: 10px; 
    }
    a {
        text-decoration: none;
    }
</style>
<body>
    <div class="delete">
        <div class="container">
          <div class="text m-auto my-5 text-center" >
            <div class="shop text-white">
                <a href="/admin/<%= link %>s"  class="d-block mb-4">
                    <h1 class="text-white">pir<span style="color: rgb(33, 216, 146);">ates</span></h1>
                </a>
                <span  class="d-block fs-5">Confirm Access</span>
            </div>
            <div class="mt-3">
                <form method="post" action="/admin/delete/<%= link %>" >
                    <% if (errorMessage.length > 0) { %> 
                        <div class="mt-2 alert alert-danger alert-dismissible fade show" role="alert">
                          <%= errorMessage %> 
                          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    <% } %> 
                    <input type="hidden" name="id" value="<%= id %>">
                    <input type="hidden" name="_csrf" value="<%= csrf %>">
                    <div class="mb-3">
                        <input type="password" name="password" class="form-control" id="formGroupExampleInput" placeholder="write Your Password">
                      </div>
                   <div class="text-center">
                        <button type="submit" class="btn btn-primary">Confirm</button>
                   </div>
                </form>
            </div>
          </div>
        </div>
    </div>
</body>
</html>